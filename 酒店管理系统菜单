#include<iostream>
using namespace std;
int main()
{
	while(1)
	{
		int fun;
		cout<<"请选择需要操作的文件"<<endl;
		cout<<"1：客人文件"<<endl;
		cout<<"2：客房文件"<<endl;
		cout<<"0：退出" <<endl;
		cout<<"选择："; 
		cin>>fun;
		cout<<endl<<"------------------------------------------------------------------------------------------------------------------------"<<endl;
		if(fun==0)
		{
			 
			cout<<"是否保存"<<endl;
			cout<<"1：保存"<<endl;
			cout<<"0：退出"<<endl;
			cout<<"选择："; 
			cin>>fun;
			cout<<endl<<"------------------------------------------------------------------------------------------------------------------------"<<endl;
			if(fun==1)
			{
				//加保存的函数 
				cout<<"已保存"<<endl; 
			} 
		break;
		}
		
		
		
	    switch(fun)
	    {
		    case 1 :
			    {
				    while(1)
					{
						cout<<"请选择操作"<<endl;
						cout<<"1：查询客人信息"<<endl;
						cout<<"2：新增客人信息"<<endl;
						cout<<"3：删除客人信息"<<endl;
						cout<<"4：修改客人信息"<<endl;
						cout<<"0：返回上一级"<<endl;
						cout<<"选择：";
						cin>>fun;
						cout<<endl<<"------------------------------------------------------------------------------------------------------------------------"<<endl;
						switch(fun)
						{
							case 1:
								//加查询客人信息的函数
								cout<<"成功查询客人信息"<<endl;
								break;
							case 2:
								//加新增客人信息的函数
								cout<<"成功新增客人信息"<<endl;
								break;
							case 3:
								//加删除客人信息的函数
							    cout<<"成功删除客人信息"<<endl;
								break; 
						    case 4:
						    	//加修改客人信息的函数
						    	cout<<"成功修改客人信息"<<endl;
							    break;
						} 
						if(fun==0)
						break;
						cout<<endl<<"------------------------------------------------------------------------------------------------------------------------"<<endl;
					 } 
				    break;
			    }
		    case 2 :
			    { 
			        while(1)
			        {
			        	cout<<"请选择操作"<<endl;
						cout<<"1：查询客房信息"<<endl;
						cout<<"2：新增客房信息"<<endl;
						cout<<"3：修改客房信息"<<endl;
						cout<<"0：返回上一级"<<endl;
						cout<<"选择：";
						cin>>fun;
						cout<<endl<<"------------------------------------------------------------------------------------------------------------------------"<<endl;
						switch(fun)
						{
							case 1:
								//加查询客房信息的函数 
								cout<<"成功查询客房信息"<<endl;
								break;
							case 2:
								//加新增客房信息的函数 
							    cout<<"成功新增客房信息"<<endl;
								break;
							case 3:
								//加修改客房信息的函数 
							    cout<<"成功修改客房信息"<<endl;
								break;
								 
						 } 
						if(fun==0) 
						break;
						cout<<endl<<"------------------------------------------------------------------------------------------------------------------------"<<endl;
					}
			        break;
			    }
		}
			 
		
	 }
    return 0;
}
  
